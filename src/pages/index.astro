---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Technologies from '../components/Technologies.astro';
import Projects from '../components/Projects.astro';
import Writing from '../components/Writing.astro';
import PostCard from '../components/PostCard.astro';
import SectionNumber from '../components/SectionNumber.astro';
import SectionTitle from '../components/SectionTitle.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('garden');
const recentPosts = posts
	.sort(
		(a: any, b: any) =>
			b.data.publishDate.getTime() - a.data.publishDate.getTime()
	)
	.slice(0, 3);
---

<Layout title="The void">
	<Hero />

	<!-- About Section -->
	<section id="about" class="py-24 md:py-32">
		<div class="container mx-auto max-w-5xl px-6 md:px-8">
			<SectionNumber number={1} />
			<SectionTitle>About</SectionTitle>
			<div class="max-w-2xl">
				<p class="text-xl md:text-2xl text-body mb-6 font-body leading-relaxed">
					I'm Miguel. A polyglot biologist turned software engineer with a
					passion for building products and making the world a better place.
				</p>
				<p class="text-xl md:text-2xl text-body font-body leading-relaxed">
					Currently serving as CTO at <a
						href="https://flown.com?referral=miguel-marinvermelho-9f20e"
						class="text-garden-accent dark:text-garden-dark-accent hover:opacity-70 transition-opacity"
						target="_blank">FLOWN</a
					>, where we're reimagining the future of work and productivity.
				</p>
			</div>
		</div>
	</section>

	<!-- Divider -->
	<div class="container mx-auto max-w-5xl px-6 md:px-8">
		<hr class="border-gray-200 dark:border-gray-800" />
	</div>

	<!-- Garden Section -->
	<section id="garden" class="py-24 md:py-32">
		<div class="container mx-auto max-w-5xl px-6 md:px-8">
			<SectionNumber number={2} />
			<SectionTitle>Garden</SectionTitle>
			<p class="text-lg text-body font-body max-w-xl mb-12">
				A space where ideas grow and thoughts interconnect.
			</p>

			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					recentPosts.map((post: any) => (
						<PostCard
							title={post.data.title}
							description={post.data.description}
							publishDate={post.data.publishDate}
							updateDate={post.data.updateDate}
							url={`/garden/${post.slug}`}
							tags={post.data.tags}
							image={post.data.image}
							variant="card"
						/>
					))
				}
			</div>

			<div class="mt-12">
				<a
					href="/garden"
					class="inline-flex items-center gap-2 text-garden-accent dark:text-garden-dark-accent font-ui font-medium hover:opacity-70 transition-opacity"
				>
					View all posts
					<svg
						class="w-4 h-4"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
					</svg>
				</a>
			</div>
		</div>
	</section>

	<!-- Divider -->
	<div class="container mx-auto max-w-5xl px-6 md:px-8">
		<hr class="border-gray-200 dark:border-gray-800" />
	</div>

	<Projects />

	<!-- Divider -->
	<div class="container mx-auto max-w-5xl px-6 md:px-8">
		<hr class="border-gray-200 dark:border-gray-800" />
	</div>

	<Technologies />

	<!-- Divider -->
	<div class="container mx-auto max-w-5xl px-6 md:px-8">
		<hr class="border-gray-200 dark:border-gray-800" />
	</div>

	<Writing />

	<!-- Divider -->
	<div class="container mx-auto max-w-5xl px-6 md:px-8">
		<hr class="border-gray-200 dark:border-gray-800" />
	</div>

	<!-- Contact Section -->
	<section id="contact" class="py-24 md:py-32">
		<div class="container mx-auto max-w-5xl px-6 md:px-8">
			<SectionNumber number={6} />
			<SectionTitle>Get in Touch</SectionTitle>
			<p class="text-lg text-body mb-10 font-body max-w-xl">
				Feel free to reach out for collaborations, questions, or just to say hi.
			</p>
			<div class="flex flex-wrap gap-3">
				<a
					aria-label="x"
					href="https://twitter.com/kiily95"
					target="_blank"
					class="inline-flex items-center justify-center w-12 h-12 bg-garden-primary dark:bg-garden-dark-primary text-white dark:text-garden-dark-background rounded-full hover:opacity-80 transition-opacity"
				>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
