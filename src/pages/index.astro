---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Technologies from '../components/Technologies.astro';
import Projects from '../components/Projects.astro';
import Writing from '../components/Writing.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('garden');
const recentPosts = posts
	.sort(
		(a: any, b: any) =>
			b.data.publishDate.getTime() - a.data.publishDate.getTime()
	)
	.slice(0, 3);
---

<Layout title="The void">
	<Hero />

	<section id="about" class="py-20 bg-white dark:bg-garden-dark-surface">
		<div class="container mx-auto max-w-4xl px-6">
			<h2
				class="text-3xl font-bold text-garden-primary dark:text-garden-dark-primary mb-8 font-ui"
			>
				About Me
			</h2>
			<p
				class="text-xl text-garden-secondary dark:text-garden-dark-secondary mb-6 font-body leading-relaxed"
			>
				I'm Miguel. A polyglot biologist turned software engineer with a passion
				for building products and making the world a better place.
			</p>
			<p
				class="text-xl text-garden-secondary dark:text-garden-dark-secondary font-body leading-relaxed"
			>
				Currently serving as CTO at <a
					href="https://flown.com?referral=miguel-marinvermelho-9f20e"
					class="text-garden-accent dark:text-garden-dark-accent hover:underline"
					target="_blank">FLOWN</a
				>, where we're reimagining the future of work and productivity.
			</p>
		</div>
	</section>

	<section
		id="garden"
		class="py-20 bg-garden-background dark:bg-garden-dark-background"
	>
		<div class="container mx-auto max-w-4xl px-6">
			<header class="mb-12">
				<h2
					class="text-3xl font-bold text-garden-primary dark:text-garden-dark-primary mb-4 font-ui"
				>
					Digital Garden
				</h2>
				<p
					class="text-xl text-garden-secondary dark:text-garden-dark-secondary font-body"
				>
					A space where ideas grow and thoughts interconnect.
				</p>
			</header>

			<div class="space-y-8">
				{
					recentPosts.map((post: any) => (
						<PostCard
							title={post.data.title}
							description={post.data.description}
							publishDate={post.data.publishDate}
							updateDate={post.data.updateDate}
							url={`/garden/${post.slug}`}
							tags={post.data.tags}
						/>
					))
				}
			</div>

			<div class="mt-8 text-center">
				<a
					href="/garden"
					class="inline-block px-6 py-3 bg-garden-accent text-white rounded-lg hover:bg-opacity-90 transition-colors font-ui"
				>
					Explore the Garden
				</a>
			</div>
		</div>
	</section>

	<Projects />

	<Technologies />

	<Writing />

	<section id="contact" class="py-20 bg-white dark:bg-garden-dark-surface">
		<div class="container mx-auto max-w-4xl px-6">
			<h2
				class="text-3xl font-bold text-garden-primary dark:text-garden-dark-primary mb-8 font-ui"
			>
				Get in Touch
			</h2>
			<p
				class="text-xl text-garden-secondary dark:text-garden-dark-secondary mb-8 font-body"
			>
				Feel free to reach out for collaborations, questions, or just to say hi!
