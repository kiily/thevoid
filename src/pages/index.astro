---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Technologies from '../components/Technologies.astro';
import Projects from '../components/Projects.astro';
import Writing from '../components/Writing.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('garden');
const recentPosts = posts
	.sort(
		(a: any, b: any) =>
			b.data.publishDate.getTime() - a.data.publishDate.getTime()
	)
	.slice(0, 3);
---

<Layout title="Miguel Marin | Software Engineer & Writer">
	<Hero />

	<section id="about" class="py-20 bg-white dark:bg-garden-dark-surface">
		<div class="container mx-auto max-w-4xl px-6">
			<h2
				class="text-3xl font-bold text-garden-primary dark:text-garden-dark-primary mb-8 font-ui"
			>
				About Me
			</h2>
			<p
				class="text-xl text-garden-secondary dark:text-garden-dark-secondary mb-6 font-body leading-relaxed"
			>
				I'm Miguel. A polyglot biologist turned software engineer with a passion
				for building products and making the world a better place.
			</p>
			<p
				class="text-xl text-garden-secondary dark:text-garden-dark-secondary font-body leading-relaxed"
			>
				Currently serving as CTO at <a
					href="https://flown.com"
					class="text-garden-accent dark:text-garden-dark-accent hover:underline"
					target="_blank">FLOWN</a
				>, where we're reimagining the future of work and productivity.
			</p>
		</div>
	</section>

	<section
		id="garden"
		class="py-20 bg-garden-background dark:bg-garden-dark-background"
	>
		<div class="container mx-auto max-w-4xl px-6">
			<header class="mb-12">
				<h2
					class="text-3xl font-bold text-garden-primary dark:text-garden-dark-primary mb-4 font-ui"
				>
					Digital Garden
				</h2>
				<p
					class="text-xl text-garden-secondary dark:text-garden-dark-secondary font-body"
				>
					A space where ideas grow and thoughts interconnect.
				</p>
			</header>

			<div class="space-y-8">
				{
					recentPosts.map((post: any) => (
						<PostCard
							title={post.data.title}
							description={post.data.description}
							publishDate={post.data.publishDate}
							updateDate={post.data.updateDate}
							url={`/garden/${post.slug}`}
							tags={post.data.tags}
						/>
					))
				}
			</div>

			<div class="mt-8 text-center">
				<a
					href="/garden"
					class="inline-block px-6 py-3 bg-garden-accent text-white rounded-lg hover:bg-opacity-90 transition-colors font-ui"
				>
					Explore the Garden
				</a>
			</div>
		</div>
	</section>

	<Projects />

	<Technologies />

	<Writing />

	<section id="contact" class="py-20 bg-white dark:bg-garden-dark-surface">
		<div class="container mx-auto max-w-4xl px-6">
			<h2
				class="text-3xl font-bold text-garden-primary dark:text-garden-dark-primary mb-8 font-ui"
			>
				Get in Touch
			</h2>
			<p
				class="text-xl text-garden-secondary dark:text-garden-dark-secondary mb-8 font-body"
			>
				Feel free to reach out for collaborations, questions, or just to say hi!
			</p>
			<div class="flex flex-wrap gap-4">
				<a
					href="https://twitter.com/kiily95"
					target="_blank"
					class="inline-flex items-center gap-2 px-6 py-3 bg-[#1DA1F2] text-white rounded-lg hover:bg-opacity-90 transition-colors font-ui"
				>
					<span>Twitter</span>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
						></path>
					</svg>
				</a>
				<a
					href="https://www.linkedin.com/in/%F0%9F%90%89-miguel-marin-vermelho-09805185/"
					target="_blank"
					class="inline-flex items-center gap-2 px-6 py-3 bg-white dark:bg-garden-dark-background text-gray-800 dark:text-garden-dark-primary rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-garden-dark-surface transition-colors font-ui"
				>
					<span>LinkedIn</span>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
						></path>
					</svg>
				</a>
			</div>
		</div>
	</section>
</Layout>
