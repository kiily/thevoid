---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
	const posts = await getCollection('garden');
	const categories = [...new Set(posts.map((post) => post.data.category))];

	return categories.map((category) => ({
		params: { category },
		props: {
			posts: posts
				.filter((post) => post.data.category === category)
				.sort(
					(a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
				),
			categories: [...new Set(posts.map((post) => post.data.category))].sort(),
			currentCategory: category,
		},
	}));
}

const { category } = Astro.params;
const { posts, categories, currentCategory } = Astro.props;
---

<Layout title={`${category} | Digital Garden`}>
	<div class="container mx-auto max-w-5xl px-6 md:px-8 py-20">
		<header class="mb-10">
			<div class="flex flex-wrap items-center gap-2 mb-4">
				{
					categories.map((cat) => (
						<a
							href={`/category/${cat}`}
							class={`text-sm font-medium px-3 py-1 rounded-full transition-colors font-ui ${
								cat === currentCategory
									? 'bg-garden-primary dark:bg-garden-dark-primary text-white dark:text-garden-dark-background'
									: 'text-body hover:text-garden-accent dark:hover:text-garden-dark-accent'
							}`}
						>
							{cat}
						</a>
					))
				}
			</div>
			<h1 class="text-garden-primary dark:text-garden-dark-primary mb-3">
				{category}
			</h1>
			<p class="text-lg text-body">
				{posts.length}
				{posts.length === 1 ? 'post' : 'posts'}
			</p>
		</header>

		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
			{
				posts.map((post) => (
					<PostCard
						title={post.data.title}
						description={post.data.description}
						publishDate={post.data.publishDate}
						updateDate={post.data.updateDate}
						url={`/garden/${post.slug}`}
						tags={post.data.tags}
						image={post.data.image}
						variant="card"
					/>
				))
			}
		</div>

		<div class="pt-8 border-t border-gray-200 dark:border-gray-800">
			<a
				href="/garden"
				class="inline-flex items-center gap-2 text-garden-accent dark:text-garden-dark-accent font-ui font-medium underline underline-offset-4 hover:opacity-70 transition-opacity"
			>
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
				</svg>
				Back to Garden
			</a>
		</div>
	</div>
</Layout>
