---
import { Font } from 'astro:assets';
import Navigation from '../components/Navigation.astro';
import Header from '../components/Header.astro';
import { ClientRouter } from 'astro:transitions';
import Analytics from '@vercel/analytics/astro';

export interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = 'A digital garden exploring web development, design, and technology.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/void.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<link rel="dns-prefetch" href="https://va.vercel-scripts.com" />

		<!-- SEO -->
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- Astro Font API - handles optimization automatically -->
		<Font cssVariable="--font-inter" preload />
		<Font cssVariable="--font-source-serif-4" preload />
		<Font cssVariable="--font-cormorant-garamond" preload />

		<!-- Theme initialization - must run before body renders to prevent flash -->
		<script is:inline>
			// Helper to get and apply theme - reduces code duplication and ensures consistency
			function getTheme() {
				return (
					localStorage.getItem('theme') ||
					(window.matchMedia('(prefers-color-scheme: dark)').matches
						? 'dark'
						: 'light')
				);
			}

			function applyTheme(element, theme) {
				// Single classList operation to minimize style recalculations
				element.classList.toggle('dark', theme === 'dark');
			}

			// Apply theme immediately on initial load (synchronous to prevent flash)
			applyTheme(document.documentElement, getTheme());

			// Apply theme to incoming document before view transition swap
			// This modifies the new document's classList, not the current one,
			// which helps avoid forced reflow during the transition animation
			document.addEventListener('astro:before-swap', (event) => {
				const theme = getTheme();
				// Apply to the incoming document's root element
				applyTheme(event.newDocument.documentElement, theme);
			});
		</script>

		<ClientRouter />
	</head>
	<body class="font-body min-h-screen">
		<Header />
		<div class="flex pt-16">
			<Navigation />
			<main
				class="flex-1 px-6 py-8 md:px-12 lg:px-16 transition-[margin] duration-300"
			>
				<slot />
				<Analytics />
			</main>
		</div>
	</body>
</html>

<style is:global>
	:root {
		--font-serif: var(--font-source-serif-4), 'Source Serif 4', Georgia, serif;
		--font-sans:
			var(--font-inter), 'Inter', system-ui, -apple-system, sans-serif;
		--font-display:
			var(--font-cormorant-garamond), 'Cormorant Garamond', Georgia, serif;

		/* Theme colors as CSS custom properties for smooth transitions */
		--theme-bg: #f7f7f2;
		--theme-text: #2d3a3a;
	}

	.dark {
		--theme-bg: #1a1a1a;
		--theme-text: #e1e1e1;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: var(--font-serif);
		line-height: 1.7;
		color: var(--theme-text);
		background-color: var(--theme-bg);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		/* Transition on custom properties doesn't cause layout recalculation */
		transition:
			background-color 0.3s ease,
			color 0.3s ease;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: var(--font-sans);
		font-weight: 700;
		line-height: 1.15;
		margin: 0;
		letter-spacing: -0.03em;
	}

	h1 {
		font-family: var(--font-display);
		font-weight: 400;
		font-style: italic;
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		letter-spacing: -0.01em;
	}

	h2 {
		font-weight: 700;
		font-size: clamp(1.75rem, 3vw, 2.25rem);
	}

	h3 {
		font-weight: 600;
		font-size: clamp(1.25rem, 2vw, 1.5rem);
	}

	h4,
	h5,
	h6 {
		font-weight: 600;
	}

	/* Section number styling */
	.section-number {
		font-family: var(--font-sans);
		font-size: 0.875rem;
		font-weight: 500;
		letter-spacing: 0.1em;
		margin-bottom: 1rem;
	}

	/* Refined link styles */
	a {
		transition:
			color 0.2s ease,
			opacity 0.2s ease;
	}

	/* Selection styling */
	::selection {
		background-color: #006400;
		color: white;
	}

	.dark ::selection {
		background-color: #90ee90;
		color: #1a1a1a;
	}

	/* Semantic text utility classes - centralized text styling */
	.text-body {
		@apply text-garden-secondary dark:text-garden-dark-secondary;
	}

	.text-body-strong {
		@apply text-garden-primary dark:text-garden-dark-primary;
	}

	.text-muted {
		@apply text-gray-500 dark:text-gray-400;
	}

	.text-label {
		@apply text-sm font-medium text-garden-secondary dark:text-garden-dark-secondary font-ui;
	}

	/* Badge/tag styling */
	.badge {
		@apply px-2 py-1 text-sm bg-gray-200 dark:bg-gray-700 text-garden-primary dark:text-white rounded;
	}

	.badge-sm {
		@apply px-2 py-1 text-xs bg-gray-200 dark:bg-gray-700 text-garden-primary dark:text-white rounded;
	}

	.badge:hover,
	.badge-sm:hover {
		@apply bg-garden-accent text-white dark:bg-garden-dark-accent;
	}
</style>
