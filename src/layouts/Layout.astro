---
import { Font } from 'astro:assets';
import Navigation from '../components/Navigation.astro';
import Header from '../components/Header.astro';
import { ClientRouter } from 'astro:transitions';
import Analytics from '@vercel/analytics/astro';

export interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = 'A digital garden exploring web development, design, and technology.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/void.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<!-- SEO -->
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- Astro Font API - handles optimization automatically -->
		<Font cssVariable="--font-inter" preload />
		<Font cssVariable="--font-source-serif-4" preload />

		<ClientRouter />
	</head>
	<body
		class="font-body bg-garden-background text-garden-primary dark:bg-garden-dark-background dark:text-garden-dark-primary min-h-screen transition-colors duration-300"
	>
		<Header />
		<div class="flex pt-16">
			<Navigation />
			<main
				class="flex-1 px-6 py-8 md:px-12 lg:px-16 transition-[margin] duration-300"
			>
				<slot />
				<Analytics />
			</main>
		</div>
	</body>
</html>

<style is:global>
	:root {
		--font-serif: var(--font-source-serif-4), 'Source Serif 4', Georgia, serif;
		--font-sans: var(--font-inter), 'Inter', system-ui, -apple-system,
			sans-serif;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: var(--font-serif);
		line-height: 1.7;
		color: #2d3a3a;
		background-color: #f7f7f2;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	.dark body {
		color: #e1e1e1;
		background-color: #1a1a1a;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: var(--font-sans);
		font-weight: 700;
		line-height: 1.15;
		margin: 0;
		letter-spacing: -0.03em;
	}

	h1 {
		font-weight: 800;
		font-size: clamp(2.5rem, 5vw, 3.5rem);
	}

	h2 {
		font-weight: 700;
		font-size: clamp(1.75rem, 3vw, 2.25rem);
	}

	h3 {
		font-weight: 600;
		font-size: clamp(1.25rem, 2vw, 1.5rem);
	}

	h4,
	h5,
	h6 {
		font-weight: 600;
	}

	/* Section number styling */
	.section-number {
		font-family: var(--font-sans);
		font-size: 0.875rem;
		font-weight: 500;
		letter-spacing: 0.1em;
		color: #a1a1a1;
		margin-bottom: 1rem;
	}

	.dark .section-number {
		color: #6b6b6b;
	}

	/* Refined link styles */
	a {
		transition: color 0.2s ease, opacity 0.2s ease;
	}

	/* Selection styling */
	::selection {
		background-color: #006400;
		color: white;
	}

	.dark ::selection {
		background-color: #90EE90;
		color: #1a1a1a;
	}
</style>
