---
export interface Props {
	href?: string;
	size?: 'sm' | 'base';
	class?: string;
}

const { href, size = 'base', class: className = '' } = Astro.props;

const sizeClasses = {
	sm: 'px-2 py-1 text-xs',
	base: 'px-3 py-1.5 text-sm',
};

const baseClasses =
	'bg-gray-200 dark:bg-gray-700 text-garden-primary dark:text-white rounded-lg font-ui transition-colors';
const hoverClasses = href
	? 'hover:bg-garden-accent hover:text-white dark:hover:bg-garden-dark-accent'
	: '';

const classes = [baseClasses, sizeClasses[size], hoverClasses, className]
	.filter(Boolean)
	.join(' ');
---

{
	href ? (
		<a href={href} class={classes}>
			<slot />
		</a>
	) : (
		<span class={classes}>
			<slot />
		</span>
	)
}
