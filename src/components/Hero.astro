---
import Search from './Search.astro';
---

<section class="min-h-[70vh] flex items-center pt-24 pb-16">
	<div class="container mx-auto max-w-5xl px-6 md:px-8">
		<div class="max-w-3xl">
			<span
				class="text-sm font-medium tracking-widest text-garden-accent dark:text-garden-dark-accent uppercase mb-6 block font-ui"
			>
				THE VOID
			</span>
			<h1
				class="text-4xl sm:text-5xl md:text-6xl text-garden-primary dark:text-garden-dark-primary mb-6 leading-[1.1]"
			>
				こんにちは
			</h1>
			<p class="text-xl md:text-2xl text-body mb-10 leading-relaxed max-w-2xl">
				Welcome to my digital garden
			</p>

			<!-- Search Bar -->
			<div class="max-w-xl mb-8">
				<Search
					id="hero-search"
					placeholder="Search posts, projects, and more..."
					className="w-full"
					showTypes={true}
					contentFilter="all"
				/>
			</div>
		</div>
	</div>
</section>
