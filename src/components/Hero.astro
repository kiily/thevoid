---
import Search from './Search.astro';
---

<section class="pt-32 pb-20 px-6">
	<div class="container mx-auto max-w-4xl">
		<h1
			class="text-5xl font-bold text-garden-primary dark:text-garden-dark-primary font-ui mb-6"
		>
			こんにちは 👋
		</h1>
		<p
			class="text-xl text-garden-secondary dark:text-garden-dark-secondary font-body mb-8 leading-relaxed"
		>
			Welcome to the void - my digital garden. For things people might want to
			read...
		</p>

		<!-- Global Search Bar -->
		<div class="max-w-2xl mx-auto mb-8">
			<Search
				id="hero-search"
				placeholder="Search garden posts, projects, and more..."
				className="w-full"
				showTypes={true}
				contentFilter="all"
			/>
		</div>
	</div>
</section>
