---
import TextCycler from './TextCycler.astro';

const greetings = [
	'Olá',           // Portuguese
	'Hola',          // Spanish
	'Hello',         // English
	'Bonjour',       // French
	'Ciao',          // Italian
	'こんにちは',     // Japanese
	'Moien',         // Luxembourgish
	'Hallo',         // German
	'سلام',          // Persian
];
---

<section class="min-h-[80vh] flex items-center justify-center pt-16 pb-24">
	<div class="container mx-auto max-w-5xl px-6 md:px-8 text-center">
		<span
			class="text-sm font-medium tracking-widest text-garden-accent dark:text-garden-dark-accent uppercase mb-8 block font-ui"
		>
			THE VOID
		</span>
		<h1
			class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-garden-primary dark:text-garden-dark-primary mb-8 leading-[1.05]"
		>
			<TextCycler texts={greetings} interval={2500} />
		</h1>
		<p class="text-xl md:text-2xl text-body mb-12 leading-relaxed max-w-2xl mx-auto">
			Welcome to my digital garden — a space where ideas grow and thoughts interconnect.
		</p>
		<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
			<a
				href="#about"
				class="inline-flex items-center gap-2 px-6 py-3 bg-garden-primary dark:bg-garden-dark-primary text-white dark:text-garden-dark-background rounded-lg font-ui font-medium hover:opacity-90 transition-opacity"
			>
				Explore
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
				</svg>
			</a>
			<a
				href="/garden"
				class="inline-flex items-center gap-2 px-6 py-3 border border-garden-primary dark:border-garden-dark-primary text-garden-primary dark:text-garden-dark-primary rounded-lg font-ui font-medium hover:bg-garden-primary/5 dark:hover:bg-garden-dark-primary/5 transition-colors"
			>
				Browse Garden
			</a>
		</div>
	</div>
</section>
