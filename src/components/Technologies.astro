---
import { Image } from 'astro:assets';

const technologies = {
	code: [
		{ name: 'TypeScript', color: '2bbc8a' },
		{ name: 'JavaScript', color: '2bbc8a' },
		{ name: 'React', color: '2bbc8a' },
		{ name: 'Python', color: '2bbc8a' },
		{ name: 'Bash', color: '2bbc8a' },
	],
	frameworks: [
		{ name: 'Next.js', color: '2bbc8a' },
		{ name: 'Angular', color: '2bbc8a' },
		{ name: 'Flutter', color: '2bbc8a' },
	],
	tools: [
		{ name: 'MongoDB', color: '2bbc8a' },
		{ name: 'PostgreSQL', color: '2bbc8a' },
		{ name: 'Docker', color: '2bbc8a' },
		{ name: 'Kubernetes', color: '2bbc8a' },
		{ name: 'Datadog', color: '2bbc8a' },
	],
	cloud: [
		{ name: 'Vercel', color: '2bbc8a' },
		{ name: 'Digital_Ocean', color: '2bbc8a' },
		{ name: 'AWS', color: '2bbc8a' },
		{ name: 'Bitrise', color: '2bbc8a' },
	],
};
---

<section id="technologies" class="py-20 bg-white">
	<div class="container mx-auto max-w-4xl px-6">
		<h2 class="text-3xl font-bold text-gray-800 mb-12">Technologies</h2>

		<div class="space-y-8">
			<div>
				<h3 class="text-xl font-semibold text-gray-700 mb-4">Code</h3>
				<div class="flex flex-wrap gap-2">
					{
						technologies.code.map((tech) => (
							<Image
								src={`https://img.shields.io/badge/Code-${tech.name}-informational?style=flat&logo=${tech.name.toLowerCase()}&logoColor=white&color=${tech.color}`}
								alt={`${tech.name} badge`}
								width={100}
								height={20}
								loading="lazy"
								decoding="async"
								class="h-5 w-auto"
								quality="high"
							/>
						))
					}
				</div>
			</div>

			<div>
				<h3 class="text-xl font-semibold text-gray-700 mb-4">Frameworks</h3>
				<div class="flex flex-wrap gap-2">
					{
						technologies.frameworks.map((tech) => (
							<Image
								src={`https://img.shields.io/badge/Framework-${tech.name}-informational?style=flat&logo=${tech.name.toLowerCase()}&logoColor=white&color=${tech.color}`}
								alt={`${tech.name} framework badge`}
								width={120}
								height={20}
								loading="lazy"
								decoding="async"
								class="h-5 w-auto"
								quality="high"
							/>
						))
					}
				</div>
			</div>

			<div>
				<h3 class="text-xl font-semibold text-gray-700 mb-4">Tools</h3>
				<div class="flex flex-wrap gap-2">
					{
						technologies.tools.map((tech) => (
							<Image
								src={`https://img.shields.io/badge/Tools-${tech.name}-informational?style=flat&logo=${tech.name.toLowerCase()}&logoColor=white&color=${tech.color}`}
								alt={`${tech.name} tool badge`}
								width={100}
								height={20}
								loading="lazy"
								decoding="async"
								class="h-5 w-auto"
								quality="high"
							/>
						))
					}
				</div>
			</div>

			<div>
				<h3 class="text-xl font-semibold text-gray-700 mb-4">Cloud</h3>
				<div class="flex flex-wrap gap-2">
					{
						technologies.cloud.map((tech) => (
							<Image
								src={`https://img.shields.io/badge/Cloud-${tech.name}-informational?style=flat&logo=${tech.name.toLowerCase()}&logoColor=white&color=${tech.color}`}
								alt={`${tech.name} cloud badge`}
								width={100}
								height={20}
								loading="lazy"
								decoding="async"
								class="h-5 w-auto"
								quality="high"
							/>
						))
					}
				</div>
			</div>
		</div>
	</div>
</section>
