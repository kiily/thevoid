---
const technologies = {
	code: ['TypeScript', 'JavaScript', 'React', 'Python', 'Bash'],
	frameworks: ['Next.js', 'Angular', 'Flutter'],
	tools: ['MongoDB', 'PostgreSQL', 'Docker', 'Kubernetes', 'Datadog'],
	cloud: ['Vercel', 'Digital Ocean', 'AWS', 'Bitrise'],
};
---

<section id="technologies" class="py-24 md:py-32">
	<div class="container mx-auto max-w-5xl px-6 md:px-8">
		<span class="section-number block">04</span>
		<header class="mb-12">
			<h2 class="text-garden-primary dark:text-garden-dark-primary mb-4 font-ui">
				Technologies
			</h2>
			<p class="text-lg text-garden-secondary dark:text-garden-dark-secondary font-body max-w-xl">
				Tools and technologies I work with daily.
			</p>
		</header>

		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
			<div>
				<h3 class="text-sm font-medium tracking-widest text-garden-accent dark:text-garden-dark-accent uppercase mb-4 font-ui">
					Languages
				</h3>
				<ul class="space-y-2">
					{technologies.code.map((tech) => (
						<li class="text-garden-secondary dark:text-garden-dark-secondary font-body">
							{tech}
						</li>
					))}
				</ul>
			</div>

			<div>
				<h3 class="text-sm font-medium tracking-widest text-garden-accent dark:text-garden-dark-accent uppercase mb-4 font-ui">
					Frameworks
				</h3>
				<ul class="space-y-2">
					{technologies.frameworks.map((tech) => (
						<li class="text-garden-secondary dark:text-garden-dark-secondary font-body">
							{tech}
						</li>
					))}
				</ul>
			</div>

			<div>
				<h3 class="text-sm font-medium tracking-widest text-garden-accent dark:text-garden-dark-accent uppercase mb-4 font-ui">
					Tools
				</h3>
				<ul class="space-y-2">
					{technologies.tools.map((tech) => (
						<li class="text-garden-secondary dark:text-garden-dark-secondary font-body">
							{tech}
						</li>
					))}
				</ul>
			</div>

			<div>
				<h3 class="text-sm font-medium tracking-widest text-garden-accent dark:text-garden-dark-accent uppercase mb-4 font-ui">
					Cloud
				</h3>
				<ul class="space-y-2">
					{technologies.cloud.map((tech) => (
						<li class="text-garden-secondary dark:text-garden-dark-secondary font-body">
							{tech}
						</li>
					))}
				</ul>
			</div>
		</div>
	</div>
</section>
